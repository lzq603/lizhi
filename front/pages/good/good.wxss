/* pages/good/good.wxss */
page{
  background-color: #eeeeee;
}
.title{
  background-color: white;
  padding: 16rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}
.title view{
  display: flex;
  flex-direction:column;
  padding: 16rpx;
}

/*价格*/
.price{
  font-weight: bold;
  color: red;
  padding: 16rpx;
  background:white;
  font-size: 48rpx;
}

/*描述*/
.description{
  padding: 16rpx;
  background:white;
  font-size: 40rpx;
  font-family:Arial, Helvetica, sans-serif;
}

/*图片*/
.imgs{
  padding: 16rpx;
  background: white;
}
.imgs image{
  width: 100%;
  margin-top: 16rpx;
}

/*商品图片底部*/
.good_bottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  font-size: 28rpx;
  background: white;
}

.good_bottom .method{
  color: blue;
}

/*用户信息*/
.ownerInfo{
  margin-top: 32rpx;
  padding: 16rpx;
  font-size: 28rpx;
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.ownerInfo text{
  display: block;
}

/*留言*/
.msgTitle{
  margin-top: 32rpx;
  padding: 24rpx;
  background: white;
}
.msgBoard{
  padding-top: 36rpx;
  padding-bottom: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: white;
}
.leave_msg{

  background:none;
  background-color:#f0ff00;
  font-size: 34rpx;
  color:black;
  border: none;
  padding: 16rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
}
.bottom{
  margin: 40rpx;
  text-align: center;
  font-size: 24rpx;
}

/*固定底部*/
.fix_bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 24rpx;
  background: white;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.fix_bottom image{
  width: 50rpx;
  height: 50rpx;
}
.fix_bottom input{
  font-size: 32rpx;
  width: 60%;
  margin-left: 12rpx;
}
.want{
  background: red;
  padding:6px 24px;
  color: white;
}
.want:active{
  background: gray;
}

.send{
  background-color: yellow;
  color: black;
  border: none;
  font-size: 30rpx;
  padding:-10rpx 20rpx;
  border-radius: 0rpx;
  width: 20%;
}

.send::after{
  border:none;
  border-radius: 0rpx;
}

.opposite,.self{
  display: flex;
  padding: 30rpx 20rpx;
  background-color: white;
  border-bottom: solid 2rpx #eeeeee; 
}
.nickname{
  color:black;
  font-size:32rpx;
  font-family:微软雅黑;
  font-weight:bold;
  margin-left:18rpx;

}
.content{
  padding:14rpx;
}
.right {
  display: flex-inline;
  flex-direction: column;
  justify-content: space-around;
}
.good_opt{
  font-size: 36rpx;
  color: #cccccc;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.preprice{
  color: #8a8a8a;
  text-decoration: line-through;
  font-size: 32rpx;
  margin-left: 8rpx;
}