/* pages/released_goods/released.wxss */
page{
  background-color: #eeeeee;
}

/*每个列表项*/
.list_item{
  margin: 20rpx 0;
  background-color: white;
}
.list_item_up{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.list_item_up image{
  width: 200rpx;
  height: 200rpx;
  padding: 30rpx;
}

.detail{
  display: flex;
  width: 550rpx;
  flex-direction: column;
  justify-content: space-between;
}

.btn_box{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

button{
  border-radius: 0;
  border: solid 1px #eeeeee;
  margin: 5rpx 20rpx 20rpx;
  font-size: 18rpx;
  padding: 10rpx 25rpx;
}
button::after{
  border-radius: 0;
  border: solid 1px #eeeeee;
  margin: 5rpx 20rpx 20rpx;
}