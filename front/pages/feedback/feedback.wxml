<!--pages/feedback/feedback.wxml-->
<view>
  <form bindsubmit='feedback'>
    <view class='title'>
      <textarea name="content" placeholder='在此输入您使用小程序时遇到的问题，或您对我们的建议'></textarea>
      <view class='divide_line'></view>
      <input name="contact" placeholder='请输入您的联系方式（可选）'></input>
    </view>
    <button form-type='submit'>提交</button>
  </form>
</view>